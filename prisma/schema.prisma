generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  phone         String?        @unique
  password      String
  fullName      String         @map("full_name")
  role          UserRole       @default(CUSTOMER)
  status        UserStatus     @default(ACTIVE)
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")
  bookings      Booking[]
  notifications Notification[]
  venues        Venue[]
  venueStaff    VenueStaff[]
  recurringPlans RecurringPlan[]

  @@map("users")
}

model Venue {
  id        String      @id @default(uuid())
  ownerId   String      @map("owner_id")
  name      String
  address   String
  latitude  Decimal     @db.Decimal(10, 8)
  longitude Decimal     @db.Decimal(11, 8)
  status    VenueStatus @default(ACTIVE)
  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @updatedAt @map("updated_at")
  column_1  String?
  venuePolicies     VenuePolicy?
  venueStaff        VenueStaff[]
  courts            Court[]
  owner             User        @relation(fields: [ownerId], references: [id])

  @@map("venues")
}

model VenuePolicy {
  id                String   @id @default(uuid())
  venueId           String   @unique @map("venue_id")
  holdTTL           Int      @map("hold_ttl")
  allowExtendHold   Boolean  @default(false) @map("allow_extend_hold")
  cancelBeforeHours Int      @map("cancel_before_hours")
  refundRule        String   @default("FULL") @map("refund_rule")
  depositType       String   @default("NONE") @map("deposit_type")
  depositValue      Decimal  @default(0) @map("deposit_value") @db.Decimal(12, 2)
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  venue             Venue    @relation(fields: [venueId], references: [id])

  @@map("venue_policies")
}

model VenueStaff {
  id        String   @id @default(uuid())
  venueId   String   @map("venue_id")
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  venue     Venue    @relation(fields: [venueId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([venueId, userId])
  @@map("venue_staff")
}

model RecurringPlan {
  id        String        @id @default(uuid())
  courtId   String        @map("court_id")
  userId    String        @map("user_id")
  startTime String        @map("start_time")
  endTime   String        @map("end_time")
  dayOfWeek DayOfWeek     @map("day_of_week")
  startDate DateTime      @map("start_date")
  endDate   DateTime      @map("end_date")
  frequency String        @default("WEEKLY")
  createdAt DateTime      @default(now()) @map("created_at")
  updatedAt DateTime      @updatedAt @map("updated_at")
  court     Court         @relation(fields: [courtId], references: [id])
  user      User          @relation(fields: [userId], references: [id])

  @@map("recurring_plans")
}

enum UserRole {
  CUSTOMER
  OWNER
  ADMIN
  STAFF
}

model Court {
  id             String           @id @default(uuid())
  venueId        String           @map("venue_id")
  name           String
  sportType      SportType        @map("sport_type")
  status         CourtStatus      @default(ACTIVE)
  createdAt      DateTime         @default(now()) @map("created_at")
  updatedAt      DateTime         @updatedAt @map("updated_at")
  bookings       Booking[]
  venue          Venue            @relation(fields: [venueId], references: [id])
  rating         Float?           @default(0) // Assuming rating exists or adding simple placeholder if needed? No, just keep strict.
  operatingHours OperatingHours[]
  pricingRules   PricingRule[]
  recurringPlans RecurringPlan[]

  @@map("courts")
}

model OperatingHours {
  id        String    @id @default(uuid())
  courtId   String    @map("court_id")
  dayOfWeek DayOfWeek @map("day_of_week")
  openTime  String    @map("open_time")
  closeTime String    @map("close_time")
  isClosed  Boolean   @default(false) @map("is_closed")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  court     Court     @relation(fields: [courtId], references: [id])

  @@unique([courtId, dayOfWeek])
  @@map("operating_hours")
}

model PricingRule {
  id           String   @id @default(uuid())
  courtId      String   @map("court_id")
  dayType      DayType  @map("day_type")
  startTime    String   @map("start_time")
  endTime      String   @map("end_time")
  pricePerHour Decimal  @map("price_per_hour") @db.Decimal(12, 2)
  isPeak       Boolean  @default(false) @map("is_peak")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  court        Court    @relation(fields: [courtId], references: [id])

  @@map("pricing_rules")
}

model Booking {
  id            String            @id @default(uuid())
  userId        String            @map("user_id")
  courtId       String            @map("court_id")
  startTime     DateTime          @map("start_time")
  endTime       DateTime          @map("end_time")
  status        BookingStatus     @default(HOLD)
  holdExpiresAt DateTime?         @map("hold_expires_at")
  totalPrice    Decimal           @map("total_price") @db.Decimal(12, 2)
  note          String?
  createdAt     DateTime          @default(now()) @map("created_at")
  updatedAt     DateTime          @updatedAt @map("updated_at")
  auditLogs     BookingAuditLog[]
  court         Court             @relation(fields: [courtId], references: [id])
  user          User              @relation(fields: [userId], references: [id])

  @@index([courtId, startTime, endTime, status])
  @@map("bookings")
}

model BookingAuditLog {
  id         String         @id @default(uuid())
  bookingId  String         @map("booking_id")
  fromStatus BookingStatus? @map("from_status")
  toStatus   BookingStatus  @map("to_status")
  actorType  ActorType      @map("actor_type")
  actorId    String?        @map("actor_id")
  note       String?
  createdAt  DateTime       @default(now()) @map("created_at")
  booking    Booking        @relation(fields: [bookingId], references: [id])

  @@index([bookingId])
  @@map("booking_audit_logs")
}

model Notification {
  id        String           @id @default(uuid())
  userId    String           @map("user_id")
  type      NotificationType
  message   String
  isRead    Boolean          @default(false) @map("is_read")
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt @map("updated_at")
  user      User             @relation(fields: [userId], references: [id])

  @@index([userId, isRead])
  @@map("notifications")
}



enum UserStatus {
  ACTIVE
  INACTIVE
}

enum VenueStatus {
  ACTIVE
  INACTIVE
}

enum CourtStatus {
  ACTIVE
  INACTIVE
}

enum SportType {
  FOOTBALL
  BADMINTON
  TENNIS
  BASKETBALL
  VOLLEYBALL
}

enum DayOfWeek {
  MON
  TUE
  WED
  THU
  FRI
  SAT
  SUN
}

enum DayType {
  WEEKDAY
  WEEKEND
}

enum BookingStatus {
  HOLD
  CONFIRMED
  CANCELLED_BY_USER
  CANCELLED_BY_OWNER
  EXPIRED
  COMPLETED
}

enum ActorType {
  SYSTEM
  CUSTOMER
  OWNER
  ADMIN
}

enum NotificationType {
  BOOKING
  PAYMENT
  REMINDER
}
